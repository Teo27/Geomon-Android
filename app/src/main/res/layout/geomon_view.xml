<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@drawable/background_repeat"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/geomon_relative_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/geomon_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_geomon"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:id="@+id/imageButtonBack"
            android:background="#00000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/button_back"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/geomon_relative1"
        android:background="@drawable/background_border"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/geomon_relative_heading"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/geomon_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Geomon"
            android:layout_below="@+id/geomon_image"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/geomon_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="#1"
            android:layout_below="@+id/geomon_image"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@id/geomon_name" />

        <ImageView
            android:id="@+id/geomon_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type"
            android:layout_below="@+id/geomon_ratingBar"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/geomon_type" />

        <TextView
            android:id="@+id/geomon_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Value"
            android:layout_below="@+id/geomon_ratingBar"
            android:layout_alignEnd="@+id/geomon_ratingBar" />

        <TextView
            android:id="@+id/level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level"
            android:layout_below="@+id/geomon_ratingBar"
            android:layout_alignStart="@+id/geomon_ratingBar" />

        <TextView
            android:id="@+id/geomon_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="14"
            android:layout_below="@+id/geomon_ratingBar"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/level" />

        <RatingBar
            android:id="@+id/geomon_ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:layout_below="@id/geomon_name"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <ImageButton
        android:id="@+id/geomon_btn_level"
        android:background="#00000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:src="@drawable/btn_levelup"
        android:layout_below="@id/geomon_relative1"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
