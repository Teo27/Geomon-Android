<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_repeat">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_catch"
        android:scaleType="fitCenter"
        android:background="#00000000"
        android:src="@drawable/btn_catch"
        android:layout_above="@+id/btn_hatch"
        android:layout_alignLeft="@+id/btn_achieve"
        android:layout_alignStart="@+id/btn_achieve"
        android:layout_marginBottom="5dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_collect"
        android:scaleType="fitCenter"
        android:background="#00000000"
        android:src="@drawable/btn_collect"
        android:layout_above="@+id/btn_achieve"
        android:layout_alignLeft="@+id/btn_hatch"
        android:layout_alignStart="@+id/btn_hatch"
        android:layout_marginBottom="5dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_achieve"
        android:scaleType="fitCenter"
        android:background="#00000000"
        android:src="@drawable/btn_ach"
        android:layout_above="@+id/btn_score"
        android:layout_alignLeft="@+id/btn_score"
        android:layout_alignStart="@+id/btn_score"
        android:layout_marginBottom="5dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_hatch"
        android:scaleType="fitCenter"
        android:background="#00000000"
        android:src="@drawable/btn_hatch"
        android:layout_above="@+id/btn_collect"
        android:layout_alignLeft="@+id/btn_catch"
        android:layout_alignStart="@+id/btn_catch"
        android:layout_marginBottom="5dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_score"
        android:scaleType="fitCenter"
        android:background="#00000000"
        android:src="@drawable/btn_score"
        android:layout_marginBottom="5dp"
        android:layout_above="@+id/btn_sign"
        android:layout_alignLeft="@+id/btn_sign"
        android:layout_alignStart="@+id/btn_sign" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_sign"
        android:scaleType="fitCenter"
        android:background="#00000000"
        android:src="@drawable/btn_sign"
        android:layout_above="@+id/btn_help"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="75dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_help"
        android:scaleType="fitCenter"
        android:background="#00000000"
        android:src="@drawable/btn_help"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btn_sign"
        android:layout_toEndOf="@+id/btn_sign"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="30dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/geo_menu"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btn_sign"
        android:layout_alignStart="@+id/btn_sign" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:background="@drawable/logo"
        android:layout_above="@+id/btn_catch"
        android:layout_alignParentStart="true" />


</RelativeLayout>
</ScrollView>