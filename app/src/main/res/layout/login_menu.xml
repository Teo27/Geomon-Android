<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.teo.myapplication.Login"
    android:background="@drawable/background_repeat">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonLogin"
        android:onClick="loginClick"
        android:background="@drawable/login"
        android:layout_below="@+id/editTextPassword"
        android:layout_alignStart="@+id/buttonRegister" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonRegister"
        android:onClick="registerClick"
        android:background="@drawable/register"
        android:layout_below="@+id/buttonLogin"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textViewScreenName"
        android:background="@drawable/usernamebutton"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textViewUsername"
        android:textAlignment="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textViewUsername"
        android:background="@drawable/passwordbutton"
        android:layout_below="@+id/editTextUsername"
        android:layout_alignStart="@+id/buttonLogin" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:id="@+id/editTextUsername"
        android:layout_below="@+id/textViewScreenName"
        android:layout_centerHorizontal="true"
        android:background="@drawable/text_input_fields_shape" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editTextPassword"
        android:layout_below="@+id/textViewUsername"
        android:layout_alignStart="@+id/editTextUsername"
        android:background="@drawable/text_input_fields_shape"/>

    <ImageView
        android:layout_width="250dp"
        android:layout_height="290dp"
        android:id="@+id/imageView"
        android:background="@drawable/mascot"
        android:layout_below="@+id/buttonRegister"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
