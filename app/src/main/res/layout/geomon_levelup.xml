<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/background_repeat"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/levelup_relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/levelup_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_levelup"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:id="@+id/levelup_btn_back"
            android:background="#00000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/button_back"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:id="@+id/levelup_image"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_below="@id/levelup_header"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/background_border"
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/levelup_relative"
        android:layout_centerHorizontal="true">

        <TextView
            android:textColor="#000000"
            android:id="@+id/levelup_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:text="Name"
            android:layout_centerHorizontal="true" />

        <TextView
            android:textColor="#000000"
            android:id="@+id/levelup_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="25dp"
            android:text="Level:"
            android:layout_below="@id/levelup_name" />

        <TextView
            android:textColor="#000000"
            android:id="@+id/levelup_lvl_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:text="14"
            android:layout_toRightOf="@id/levelup_level"
            android:layout_below="@id/levelup_name" />

        <TextView
            android:textColor="#000000"
            android:id="@+id/levelup_steps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:text="Steps: "
            android:layout_below="@id/levelup_level" />

        <TextView
            android:textColor="#000000"
            android:id="@+id/levelup_steps_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:layout_toRightOf="@id/levelup_steps"
            android:layout_below="@id/levelup_lvl_value" />

    </RelativeLayout>
</RelativeLayout>
